<%= form_for(@portfolio) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle, style: "display: block" %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body, style: "display: block" %>
        <%= form.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>

  
  <br>
  <div class="col-md-12">
    <h1>Technologies Used:</h1>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: "form-control" %>
        </div class="form-group">
      <% end %>
    </div>

    <br>

    <div class="form-group">
      <%= form.submit 'Save portfolio', class: 'btn btn-secondary'  %>
    </div>
  </div>
<% end %>
